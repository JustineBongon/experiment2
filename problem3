#include<iostream>
#include<conio.h>
#include<cmath>

using namespace std;

int main()
{
	int x,y,z;

	cout << " Enter a value for x" << endl;
	cin >> x;
	cout << " Enter a value for y" << endl;
	cin >> y;
	
	switch(x)
	{
		case 1:
			if (y>1,y<5)
			cout << " V = xyz\n" << " V = " << x * y * 2.5;
			else
			cout << " V = x + y/z\n" << " V = " << x + y / 2.5;
			break;
		case 2:
			if (y<=5)
			cout << " V = |(x-y)/z|\n" << " V = " << abs( x-y ) / 2.5;
			else
			cout << " V = x - vy+2.5\n" << " V = " << x - sqrt(y + 2.5);
			break;	
		default:
			cout << " V = x + y + z\n" << " V = " << x + y + 2.5;
			break;
		
	}
	
	_getch();
	return 0;
}
